     {{!-- Banner1 usage as start learning technology --}}
    <section class="banner1_section background1 py-5 px-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h1>Start learning new technology here</h1>
                    <p>
                        Lorem ipsum dolor sit, amet consectetur adipisicing elit. Odit esse obcaecati ex suscipit.
                    </p>
                    <button class="btn btn-outline-primary">Start Learning</button>
