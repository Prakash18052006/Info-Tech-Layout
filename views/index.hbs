            </div>
        </div>
    </section>



    {{!-- Services section --}}
    <section id="services_section" class="py-3">
        <div class="container">
            <h1 class="text-center text-secondary">Servicest that we provide</h1>
            <div class="row mt-5">
                {{!-- first service col --}}
                {{#each services}}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">

                            <div class="container text-center py-3">
                                <i class="{{this.icon}} service_icon"></i>
                            </div>

                            <h3 class="card-title">{{this.title}}</h3>
                            <p>{{this.description}}</p>

                            <a href="{{this.linkText}}">{{this.link}}</a>
                            {{!-- <a href="#!" class="ml-3">Support</a> --}}
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </section>



    {{!-- Banner2 usage as templates showing  --}}
    <section class="banner2_section py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center py-3">
                    {{!-- Left Side  --}}
                    <h2>
